<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ToDoList</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <link rel="stylesheet" href="~/icon/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Caveat&family=Fredoka:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body >
@model ToDoList.Entities.User

@{
    ViewData["Title"] = "Login";
     
}

<div class="nav-bar">
    <div class="nav-logo">
        <a asp-controller="Home" asp-action="Index"><img src=/img/Img1.svg /></a>
    </div>
    <div class="nav-link">
        <a class="login" asp-controller="User" asp-action="Login">Log in</a>
        <a class="register" asp-controller="User" asp-action="Register">Start for FREE</a>
    </div>
</div>

<div class="form-body">
    <form asp-action="Login" class="form"> 
        <h1>Log in</h1>
        <input class="form-input" asp-for="@Model.Email" value="@Model?.Email" placeholder=" " />
        <label class="form-label email" asp-for="@Model!.Email"></label>
        <input class="form-input" asp-for="@Model!.Password" type="password" value="@Model?.Password" placeholder=" " />
        <label class="form-label password" asp-for="@Model!.Password"></label>
        <input class="form-submit" type="submit" value="Log in" />
        <a asp-action="ForgotPassword" class="form-forgot--password">Forgot your password?</a>
        <hr />
        <a asp-action="Register" class="form-action">Dont have account?<span class="underline">Sign in</span></a>
    </form>
</div>
</body>
</html>



